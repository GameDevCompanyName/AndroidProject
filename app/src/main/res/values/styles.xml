<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="BMRButton" parent="Theme.AppCompat">
        <!--<item name="android:colorButtonNormal">@color/BMRButton_color_disabled</item>-->
        <!--<item name="android:colorAccent">@color/BMRButton_color_enabled</item>-->
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:disabledAlpha">0.4</item>
        <item name="android:textColor">#ffe8e2</item>
        <item name="android:fontFamily">@font/straight</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BMRButtonSmall" parent="BMRButton">
        <item name="android:background">@drawable/custom_button_small</item>
        <item name="android:fontFamily">@font/straight</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BMRTextSmall" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/thin</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#ffe8e2</item>
    </style>

    <style name="BMRTextTitle" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/straight</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#ffe8e2</item>
    </style>

    <style name="BMRTheme" parent="AppTheme" />

</resources>
