<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivities.InLocation.InLocationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_in_location_content_LocationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                style="@style/BMRTextTitle"
                android:text="Название"
                android:textAlignment="center"
                android:textSize="50dp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/fragment_in_location_content_LocationDescriptionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BMRTextTitle"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:text="Описание"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/fragment_in_location_content_LocationDescriptionContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="inherit"
                style="@style/BMRTextSmall"
                android:text="TextView"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/fragment_in_location_content_NPCTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                style="@style/BMRTextTitle"
                android:text="NPC"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/fragment_in_location_content_NPCDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"

                android:textAlignment="inherit"
                android:layout_marginBottom="5dp"
                style="@style/BMRTextSmall"
                android:text="TextView"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fragment_in_location_content_NPCattack"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Напасть!"
                    style="@style/BMRButton"/>

                <Button
                    android:id="@+id/fragment_in_location_content_NPCtalk"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Говорить"
                    style="@style/BMRButton" />
            </LinearLayout>

            <Button
                android:id="@+id/fragment_in_location_content_GoAway"
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:text="Идти дальше"
                style="@style/BMRButton" />

        </LinearLayout>
    </ScrollView>

    <!-- TODO: Update blank fragment layout -->


</FrameLayout>